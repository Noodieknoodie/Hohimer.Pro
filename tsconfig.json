{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./lib",
    "rootDir": "./src",
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/static", "src/**/*.test.ts", "src/**/*.test.tsx", "src/setupTests.ts"]
}
